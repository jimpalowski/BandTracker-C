@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link href="stylesrevised.css" rel="stylesheet" type="text/css" >


<h2>Venues:</h2>
@if (Model.Count != 0)
{

    @foreach (var venue in Model)
    {
      <p><a href="/venues/@venue.GetId()">@venue.GetName() </a></p>


            <form action='/venues/@venue.GetId()/delete' method="post">
                  <button class="btn btn-danger" type="submit">Remove</button>
                  </form>
    }
}
<br>
<br>

<a class="btn btn-primary" href="/venues/new" role="button">Add a new Venue</a>
<a class="btn btn-primary" href="/" role="button">Return to Main Page</a>
