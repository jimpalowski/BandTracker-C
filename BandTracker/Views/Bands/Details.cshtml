@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link href="stylesrevised.css" rel="stylesheet" type="text/css" >

@using BandTracker.Models;
<h2>Band: @Model["selectedBand"].GetDescription()</h2>

  @if (@Model["bandVenues"].Count != 0)
  {
    <h4>This band has these venues:</h4>
    @foreach (Venue venue in @Model["bandVenues"])
    {
    <ul>
    <li>@venue.GetName()</li>

    </ul>

    }
  }
<hr />
<h4>Add a venue to this band:</h4>
<form action='/bands/@Model["selectedBand"].GetId()/venues/new' method='post'>
  <label for='venue-id'>Select a venue</label>
  <select id='venue-id' name='venue-id' type='text'>
    @foreach (var venue in @Model["allVenues"])
    {
      <option value='@venue.GetId()'>@venue.GetName()</option>
    }
  </select>
  <button type='submit'>Add</button>
</form>
<br>
<a class="btn btn-primary" href="/bands/@Model["selectedBand"].GetId()/update" role="button">Update Band</a>
<a class="btn btn-primary" href="/" role="button">Return to Main Page</a>

  </div>
