@{
  Layout = "_Layout";
}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link href="stylesrevised.css" rel="stylesheet" type="text/css" >

<h2>Bands:</h2>
@if (Model.Count != 0)
{
  <ul>
    @foreach (var band in Model)
    {
      <li><a href='/bands/@band.GetId()'>@band.GetDescription()</a></li>
      <form action='/bands/@band.GetId()/delete' method="post">
            <button class="btn btn-danger" type="submit">Remove</button>
            </form>

    }
  </ul>
}
<br>
<a class="btn btn-primary" href="/bands/new" role="button">Add new Band</a>
<a class="btn btn-primary" href="/" role="button">Return to Main Page</a>
